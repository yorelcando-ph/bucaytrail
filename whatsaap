  <script>
    const images = [
      'https://res.cloudinary.com/dczh5rxbe/image/upload/v1762192975/DSC04654_c8wetc.jpg',
      'https://res.cloudinary.com/dczh5rxbe/image/upload/v1762192974/DSC04843_owqoj2.jpg',
      'https://res.cloudinary.com/dczh5rxbe/image/upload/v1762192974/DSC04794_do0sor.jpg',
      'https://res.cloudinary.com/dczh5rxbe/image/upload/v1762192974/DSC04908_tssfwz.jpg',
      'https://res.cloudinary.com/dczh5rxbe/image/upload/v1762192974/DSC04822_d1ifk6.jpg',
      'https://res.cloudinary.com/dczh5rxbe/image/upload/v1762192974/DSC04901_aib1ku.jpg',
      'https://res.cloudinary.com/dczh5rxbe/image/upload/v1762192973/DSC05091_j3iucm.jpg'
    ];

    const defaultConfig = {
      main_title: 'BUCAY TRAIL - PRIMERA EDICIÓN',
      button_text: 'Comprar Fotos',
      contact_button_text: 'Contactar Fotógrafo',
      background_color: '#000000',
      text_color: '#ffffff',
      button_color: '#ffffff',
      font_family: 'Helvetica Neue',
      font_size: 16
    };

    let currentIndex = 0;
    const sliderContainer = document.getElementById('sliderContainer');

    // Crear elementos de imagen para el slider
    images.forEach((imageUrl, index) => {
      const imageDiv = document.createElement('div');
      imageDiv.className = 'slider-image';
      imageDiv.style.backgroundImage = `url('${imageUrl}')`;
      if (index === 0) {
        imageDiv.classList.add('active');
      }
      sliderContainer.appendChild(imageDiv);
    });

    const imageElements = document.querySelectorAll('.slider-image');

    function changeSlide() {
      imageElements[currentIndex].classList.remove('active');
      currentIndex = (currentIndex + 1) % images.length;
      imageElements[currentIndex].classList.add('active');
    }

    // Cambiar imagen cada 4 segundos
    setInterval(changeSlide, 4000);

    // Funcionalidad de los botones
    document.getElementById('ctaButton').addEventListener('click', function(e) {
      e.preventDefault();
      window.open('https://galerias.yorelcandofotografo.com/fotosbucaytrail/', '_blank', 'noopener,noreferrer');
    });

    document.getElementById('contactButton').addEventListener('click', function(e) {
      e.preventDefault();
      const phoneNumber = '593994276282';
      const message = 'Hola Yorel, me gustaría comprar mis fotos, ¿me puedes ayudar?';
      const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
      window.open(whatsappUrl, '_blank', 'noopener,noreferrer');
    });

    // Element SDK Implementation
    async function onConfigChange(config) {
      const titleElement = document.getElementById('mainTitle');
      const buttonElement = document.getElementById('ctaButton');
      const contactButtonElement = document.getElementById('contactButton');

      titleElement.textContent = config.main_title || defaultConfig.main_title;
      buttonElement.textContent = config.button_text || defaultConfig.button_text;
      contactButtonElement.textContent = config.contact_button_text || defaultConfig.contact_button_text;

      const customFont = config.font_family || defaultConfig.font_family;
      const baseFontStack = 'Arial, sans-serif';
      const baseSize = config.font_size || defaultConfig.font_size;

      titleElement.style.fontFamily = `${customFont}, ${baseFontStack}`;
      buttonElement.style.fontFamily = `${customFont}, ${baseFontStack}`;
      contactButtonElement.style.fontFamily = `${customFont}, ${baseFontStack}`;

      titleElement.style.fontSize = `${baseSize * 1.875}px`;
      buttonElement.style.fontSize = `${baseSize * 0.703125}px`;
      contactButtonElement.style.fontSize = `${baseSize * 0.546875}px`;

      const textColor = config.text_color || defaultConfig.text_color;
      const buttonColor = config.button_color || defaultConfig.button_color;

      titleElement.style.color = textColor;
      buttonElement.style.color = buttonColor;
      buttonElement.style.borderColor = buttonColor;
      contactButtonElement.style.color = buttonColor;
      contactButtonElement.style.borderColor = buttonColor;
    }

    function mapToCapabilities(config) {
      return {
        recolorables: [
          {
            get: () => config.text_color || defaultConfig.text_color,
            set: (value) => {
              if (window.elementSdk) {
                window.elementSdk.setConfig({ text_color: value });
              }
            }
          },
          {
            get: () => config.button_color || defaultConfig.button_color,
            set: (value) => {
              if (window.elementSdk) {
                window.elementSdk.setConfig({ button_color: value });
              }
            }
          }
        ],
        borderables: [],
        fontEditable: {
          get: () => config.font_family || defaultConfig.font_family,
          set: (value) => {
            if (window.elementSdk) {
              window.elementSdk.setConfig({ font_family: value });
            }
          }
        },
        fontSizeable: {
          get: () => config.font_size || defaultConfig.font_size,
          set: (value) => {
            if (window.elementSdk) {
              window.elementSdk.setConfig({ font_size: value });
            }
          }
        }
      };
    }

    function mapToEditPanelValues(config) {
      return new Map([
        ['main_title', config.main_title || defaultConfig.main_title],
        ['button_text', config.button_text || defaultConfig.button_text],
        ['contact_button_text', config.contact_button_text || defaultConfig.contact_button_text]
      ]);
    }

    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities,
        mapToEditPanelValues
      });
    }
  </script>
